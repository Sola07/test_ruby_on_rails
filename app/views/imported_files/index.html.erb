        <%= form.button "import", class: "btn btn-primary"%>
      <% end %>
    </div>
    <% if params[:imported_file_id].present? %>
      <% imported_file = ImportedFile.find(params[:imported_file_id]) %>
        <p class="home-text">
          Nom du fichier: <%= imported_file.file_name %><br>
          <%= link_to "Voir mes donnÃ©es", imported_file_path(imported_file) %>
