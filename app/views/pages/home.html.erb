<div class="container">
  <div class="form-group">
    <h3 class="home-text">Upload a CSV file</h3>
    <div class="form-container">
      <%= form_with url: import_pages_path, method: :post, class: "file-input" do |form | %>
      <%= form.file_field :file, accept:".csv" %>
      <%= form.button "import", class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
